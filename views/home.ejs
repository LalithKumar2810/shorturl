<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: #1f1f1f;
        color: #f1f1f1;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      h1 {
        margin-top: 30px;
        font-size: 2.5rem;
        color: #00ffff;
        text-shadow: 0 0 10px #00ffff;
      }

      form {
        background-color: #2b2b2b;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
        margin-top: 20px;
        display: flex;
        flex-direction: column;
        gap: 10px;
        width: 300px;
      }

      label {
        font-size: 1rem;
        margin-bottom: 5px;
      }

      input[type="text"] {
        padding: 10px;
        border: none;
        border-radius: 8px;
        background-color: #3a3a3a;
        color: #f1f1f1;
      }

      button {
        padding: 10px;
        border: none;
        background: #00ffff;
        color: #000;
        font-weight: bold;
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.3s ease;
      }

      button:hover {
        background: #00cccc;
      }

      .url-generated {
        margin-top: 20px;
        background: #292929;
        padding: 15px;
        border-radius: 10px;
        color: #00ffcc;
        font-weight: bold;
      }

      table {
        margin-top: 30px;
        border-collapse: collapse;
        width: 90%;
        max-width: 800px;
        background: #2b2b2b;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 0 15px rgba(0, 255, 255, 0.2);
      }

      th,
      td {
        padding: 12px 16px;
        text-align: center;
      }

      thead {
        background-color: #00ffff;
        color: #000;
      }

      tbody tr:nth-child(even) {
        background-color: #3a3a3a;
      }

      tbody tr:hover {
        background-color: #444;
      }
    </style>
  </head>
  <body>
    <h1>URL Shortener</h1>

    <% if (locals.id) { %>
    <div class="url-generated">
      URL Generated:
      <a
        href="http://localhost:8001/url/<%= id %>"
        target="_blank"
        style="color: #00ffff"
      >
        http://localhost:8000/url/<%= id %>
      </a>
    </div>
    <% } %>

    <form method="POST" action="/url">
      <label>Enter your original URL</label>
      <input
        type="text"
        name="url"
        placeholder="https://example.com"
        required
      />
      <button type="submit">Generate</button>
    </form>

    <% if (locals.urls) { %>
    <table>
      <thead>
        <tr>
          <th>S. No</th>
          <th>Short ID</th>
          <th>Original URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% urls.forEach((url, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= url.shortId %></td>
          <td>
            <a
              href="<%= url.redirectURL %>"
              target="_blank"
              style="color: #00ffff"
              ><%= url.redirectURL %></a
            >
          </td>
          <td><%= url.visitHistory.length %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } %>
  </body>
</html>
